# Diccionario que almacena los videojuegos y sus puntuaciones promedio
# La clave representa el nombre del juego y el valor su puntuación (0 - 10)


# María José Montepeque Zet y Mónica Carolina Campos Rodrigez 


games = {
    "The Legend of Zelda": 9.8,
    "Minecraft": 9.5,
    "Among Us": 8.2
}

def add_game(name, score):
    
    if 0 <= score <= 10:
        games[name] = score
        print(f"El juego '{name}' fue registrado con una puntuación de {score}.")
    else:
        print("La puntuación debe estar en el rango de 0 a 10.")

def top_n(n):
    
    ordered_games = sorted(
        games.items(),
        key=lambda item: item[1],
        reverse=True
    )
    return ordered_games[:n]

def list_games():
    
    if not games:
        print("No hay videojuegos registrados.")
    else:
        print("\nListado de videojuegos:")
        for name, score in games.items():
            print(f"{name}: {score}")

def menu():
    
    while True:
        print("\n--- MENÚ PRINCIPAL DE VIDEOJUEGOS ---")
        print("1. Listar videojuegos existentes")
        print("2. Añadir o actualizar videojuego")
        print("3. Mostrar Top 3 de videojuegos")
        print("4. Salir")

        option = input("Seleccione la opción deseada: ")

        if option == "1":
            list_games()

        elif option == "2":
            name = input("Ingrese el nombre del videojuego por añadir o modificar: ")
            try:
                score = float(input("Ingrese la puntuación (0 - 10): "))
                add_game(name, score)
            except ValueError:
                print("Debe ingresar un valor numérico válido.")

        elif option == "3":
            top_games = top_n(3)
            print("\nTop 3 videojuegos mejor valorados:")
            for game in top_games:
                print(game)

        elif option == "4":
            print("El programa a sido cerrado con exito BYE BYE.")
            break

        else:
            print("Opción no válida. Intente nuevamente.")

menu()
